# LiveVTT Translation API Configuration
# Copy this file to .env and fill in your API keys

# Mistral AI API Configuration
# Get your API key from: https://console.mistral.ai/
# Note: Free tier has 1 request/second rate limit (tool uses 1.2s delay by default)
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_API_URL=https://api.mistral.ai/v1/chat/completions
MISTRAL_MODEL=mistral-large-latest

# LibreTranslate API Configuration
# Use public instance or self-hosted: https://github.com/LibreTranslate/LibreTranslate
LIBRETRANSLATE_API_KEY=your_libretranslate_api_key_here
LIBRETRANSLATE_API_URL=https://libretranslate.com/translate

# OpenAI API Configuration (optional, for OpenAI-compatible endpoints)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4

# Local LLM Configuration (vLLM, Ollama, llama.cpp)
# LOCAL_LLM_API_URL=http://localhost:8000/v1/chat/completions
# LOCAL_LLM_MODEL=mistral-7b-instruct

# Wowza Configuration (for live streaming)
WOWZA_USERNAME=your_wowza_username
WOWZA_PASSWORD=your_wowza_password
