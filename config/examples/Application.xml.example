<?xml version="1.0" encoding="UTF-8"?>
<!-- LiveVTT Caption Module Configuration Example -->
<!-- Add these sections to your Wowza Application.xml file -->

<!-- 1. Add to <Modules> section -->
<Module>
    <Name>LiveVTTCaptionModule</Name>
    <Description>LiveVTT Caption Module for real-time closed captioning</Description>
    <Class>com.livevtt.wowza.LiveVTTCaptionModule</Class>
</Module>

<!-- 2. Add to <Properties> section -->
<!-- LiveVTT Caption Properties -->
<Property>
    <Name>livevtt.caption.language</Name>
    <Value>eng</Value>
    <Type>String</Type>
</Property>
<Property>
    <Name>livevtt.caption.trackId</Name>
    <Value>99</Value>
    <Type>Integer</Type>
</Property>
<Property>
    <Name>captionLiveIngestType</Name>
    <Value>onTextData</Value>
    <Type>String</Type>
</Property>
<Property>
    <Name>livevtt.caption.debug</Name>
    <Value>false</Value>
    <Type>Boolean</Type>
</Property>

<!-- 3. Optional: HLS WebVTT Configuration -->
<Property>
    <Name>cupertinoTagVTT</Name>
    <Value>true</Value>
    <Type>Boolean</Type>
</Property>
<Property>
    <Name>cupertinoTagVTTLanguage</Name>
    <Value>eng</Value>
    <Type>String</Type>
</Property>
