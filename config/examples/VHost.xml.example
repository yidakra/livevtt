<?xml version="1.0" encoding="UTF-8"?>
<!-- LiveVTT HTTP Provider Configuration Example -->
<!-- Add this section to your Wowza VHost.xml file -->

<!-- Add to <HTTPProviders> section under the appropriate HostPort (typically 8086) -->
<HTTPProvider>
    <BaseClass>com.livevtt.wowza.LiveVTTCaptionHTTPProvider</BaseClass>
    <RequestFilters>livevtt*</RequestFilters>
    <AuthenticationMethod>none</AuthenticationMethod>
</HTTPProvider>

